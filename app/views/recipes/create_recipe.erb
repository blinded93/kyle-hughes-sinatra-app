<div class='outer content-box'>
    <h3><strong>create recipe</strong></h3>
      <p class='text-danger text-center'><%= flash[:new] %></p>
    <form method='post' action='/recipes'>
        <div class='form-group'>
          <label for='recipe_name'>recipe name</label><br>
          <input id='recipe_name' class='form-control input-sm width' type='text' name='name' placeholder='recipe name'>
        </div><br>
        <div class='form-group'>
          <label for='prep_time'>prep time</label><br>
          <input id='prep_time' class='form-control input-sm width' type='number' name='prep_time' placeholder='time in minutes'>
        </div><br>
        <div class='form-group'>
          <label for='cook_time'>cook time</label><br>
          <input id='cook_time' class='form-control input-sm width' type='number' name='cook_time' placeholder='time in minutes'>
        </div><br>
        <div class='form-group'>
          <label for='servings'>servings</label><br>
          <input id='servings' class='form-control input-sm width' type='number' name='servings' placeholder='servings'>
        </div><br>
        <div class='form-group'>
          <label for='skill_level'>skill level</label><br>
          <input id='skill_level' class='form-control input-sm width' type='text' name='skill_level' placeholder='skill level'>
        </div><br>
        <div class='form-group'>
          <label for='ingredients'>ingredients</label>
          <input id='ingredients' class='form-control input-sm width' type='text' name='ingredients' placeholder='separate by comma'>
        </div><br>
        <div class='form-group'>
          <label for='directions'>directions</label>
          <textarea id='directions' class='size form-control input-sm' name='directions' placeholder='separate by line'></textarea>
        </div><br>
        <input class='btn btn-xs btn-success' type='submit' value='create recipe'>
    </form>
</div>
