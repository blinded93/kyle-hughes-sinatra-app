<div class='outer content-box'>
  <h3><strong>recipes</strong></h3>
  <a href='/recipes/new'><button class='btn btn-xs btn-success'>create recipe</button></a><br><br>
    <ul class='list-unstyled'>
      <% @user.recipes.each do |recipe| %>
        <li><a class='btn btn-link' href='/recipes/<%= recipe.id %>'><%= recipe.name %></a></li>
      <% end %>
    </ul>
</div>
