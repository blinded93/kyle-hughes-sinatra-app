<div class='outer content-box'>
  <h3><strong>edit recipe</strong></h3>
    <form method='post' action='/recipes/<%= @recipe.id %>'>
      <div>
          <input type='hidden' name='_method' value='patch'>
        <div class='form-group'>
          <label for='recipe_name'>recipe name</label><br>
          <input id='recipe_name' class='form-control input-sm width' type='text' name='recipe[name]' value='<%= @recipe.name %>'>
        </div><br>
        <div class='form-group'>
          <label for='prep_time'>prep time</label><br>
          <input id='prep_time' class='form-control input-sm width' type='number' name='recipe[prep_time]' value='<%= @recipe.prep_time %>'>
        </div><br>
        <div class='form-group'>
          <label for='cook_time'>cook time</label><br>
          <input id='cook_time' class='form-control input-sm width' type='number' name='recipe[cook_time]' value='<%= @recipe.cook_time %>'>
        </div><br>
        <div class='form-group'>
          <label for='servings'>servings</label><br>
          <input id='servings' class='form-control input-sm width' type='number' name='recipe[servings]' accept=""value='<%= @recipe.servings %>'>
        </div><br>
        <div class='form-group'>
          <label for='skill_level'>skill level</label><br>
          <input id='skill_level' class='form-control input-sm width' type='text' name='recipe[skill_level]' value='<%= @recipe.skill_level %>'>
        </div><br>
        <div class='form-group'>
          <label for='ingredients'>ingredients</label><br>
          <input id='ingredients' class='form-control input-sm width' type='text' name='recipe[ingredients]' value='<%= @recipe.ingredients %>'>
        </div><br>
        <div class='form-group'>
          <label for='directions'>directions</label><br>
          <textarea id='directions' class='size form-control input-sm' name='recipe[directions]'><%= @recipe.directions %></textarea><br>
          <input class='btn btn-xs btn-success' type='submit' value='edit recipe'>
    </form>
</div>
